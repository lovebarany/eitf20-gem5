+ * Used in the Computer Architecture course EITF20 at Lund University
+ */
+
+
+#ifndef __CPU_PRED_STATIC_HH__
+#define __CPU_PRED_STATIC_HH__
+
+#include <vector>
+
+#include "base/types.hh"
+#include "cpu/pred/bpred_unit.hh"
+#include "params/StaticBP.hh"
+
+namespace gem5
+{
+
+namespace branch_prediction
+{
+
+/**
+ * Implement a static branch predictor, that will always predict a
+ * branch as taken/not taken (depending on parameter taken).
+ * bp_history pointer should always be null, no history is recorded
+ * or used in this predictor.
+ */
+class StaticBP : public BPredUnit
+{
+  public:
+    /**
+     * Default branch predictor constructor.
+     */
+    StaticBP(const StaticBPParams &params);
+
+    // Overriding interface functions
+    bool lookup(ThreadID tid, Addr pc, void * &bp_history) override;
+
+    void updateHistories(ThreadID tid, Addr pc, bool uncond, bool taken,
+                         Addr target, const StaticInstPtr &inst,
+                         void * &bp_history) override;
+
+    void update(ThreadID tid, Addr pc, bool taken,
+                void * &bp_history, bool squashed,
+                const StaticInstPtr & inst, Addr target) override;
+
+    void squash(ThreadID tid, void * &bp_history) override
+    { assert(bp_history == NULL); }
+
+  private:
+      /**
+       * Direction of static prediction.
+       * True -> assume taken
+       * False -> assume not taken
+       */
+      const bool taken;
+};
+
+} // namespace branch_prediction
+} // namespace gem5
+
+#endif // __CPU_PRED_STATIC_HH__
